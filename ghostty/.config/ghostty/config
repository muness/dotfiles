# ==============================================
# CYBERPUNK DEV PRESET
# ==============================================
# Combination: Tokyo Night + Fira Code
# Perfect for: Modern web development, React/TypeScript, futuristic coding
# Vibe: Neon-lit coding sessions, cyberpunk aesthetic

# Tokyo Night Theme - CORRECTED
theme = TokyoNight

# JetBrains Mono Nerd Font - optimizado para ASCII art, Unicode y ligatures
font-family = JetBrainsMono Nerd Font Mono
font-size = 13
font-thicken = true
font-feature = +calt,+liga

# Optimizaciones para renderizado de caracteres Unicode y ASCII art
adjust-box-thickness = 1
adjust-cell-width = 0
grapheme-width-method = unicode

# Cyberpunk window styling - CORRECTED OPTIONS
window-padding-x = 16
window-padding-y = 12
window-decoration = true

# Futuristic cursor
cursor-style = bar
cursor-opacity = 0.9

# Enhanced visual effects
minimum-contrast = 1.2

# Tokyo Night selection - CORRECTED
selection-background = #364a82

shell-integration = fish

# Auto-launch Zellij (attach to existing session or create new)
command = /opt/homebrew/bin/zellij attach --create main

# AI NOTES FOR CYBERPUNK DEV:
# - Maximum transparency (0.85) for futuristic glass effect
# - High blur (25) creates neon glow atmosphere
# - Fira Code ligatures perfect for modern JS/TS syntax
# - Enhanced padding showcases the beautiful ligatures
# - Low unfocused opacity (0.5) creates dramatic focus effect

# ==============================================
# Keybindings - Zellij Integration
# ==============================================
# Ghostty tabs disabled - using Zellij for multiplexing (yabai compatible)

# Text operations
keybind = alt+backspace=text:\x1b\x7f
keybind = shift+enter=text:\n
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Font size control
keybind = cmd+equal=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Clear screen
keybind = cmd+k=clear_screen

# ---------- Zellij Integration ----------
# Pass Cmd keys through to Zellij (Alt+t = tab mode, Alt+Shift+p = pane mode)

# New tab: Alt+t then n
keybind = cmd+t=text:\x1btn
# Close pane: Alt+Shift+p then x
keybind = cmd+w=text:\x1bPx
# Split right: Alt+Shift+p then r
keybind = cmd+d=text:\x1bPr
# Split down: Alt+Shift+p then d
keybind = cmd+shift+d=text:\x1bPd

# Tab navigation: Alt+t then <number>
keybind = cmd+1=text:\x1bt1
keybind = cmd+2=text:\x1bt2
keybind = cmd+3=text:\x1bt3
keybind = cmd+4=text:\x1bt4
keybind = cmd+5=text:\x1bt5
keybind = cmd+6=text:\x1bt6
keybind = cmd+7=text:\x1bt7
keybind = cmd+8=text:\x1bt8
keybind = cmd+9=text:\x1bt9

# New pane (quick): Alt+n (zellij shared binding)
keybind = cmd+n=text:\x1bn

# Tab cycling: Ctrl+Tab / Ctrl+Shift+Tab -> Zellij tab navigation
# Sends Alt+t then l/h (tab mode + next/prev)
keybind = ctrl+tab=text:\x1btl
keybind = ctrl+shift+tab=text:\x1bth

# Tab cycling: Cmd+] and Cmd+[ for next/prev tab
# Sends Alt+t then l/h to Zellij (tab mode + direction)
keybind = cmd+right_bracket=text:\x1btl
keybind = cmd+left_bracket=text:\x1bth

macos-titlebar-style = transparent
background-opacity = 0.9
macos-option-as-alt = true
mouse-hide-while-typing = true

# Window chrome for dragging
window-decoration = true
